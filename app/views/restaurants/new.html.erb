<%= form_for(@restaurant, :html => {:class=>"form-inline"}) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, :class => "name" %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address, :class => "address" %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>