
<h1><%= @restaurant.name %> </h1>
<h2> Menus </h2>
  <% @restaurant.menus.each do |m| %>
    <p>
    <%= link_to m.name, m%>
    <% if current_user %>
      <% if can? :destroy, @menu %>
        <%= link_to 'Delete', menu_path(m), :confirm => "Are you sure you want to delete this menu?", :method => :delete %>
      <% end %>
    <% end %>
    </p>
<% end %>

<% if current_user %>
  <% if can? :create, @menu %>
    <%= link_to "Add Menu", new_menu_path %>
  <%end%>
<%end%>

<h2> Reviews </h2>
<%= " Average Rating: " + @restaurant.printRating.to_s %>

<% if current_user %>
  <% if can? :create, @review %>
  <br><%= link_to "Add Review", new_review_path(:restaurant_id => @restaurant.id) %></br>
  <% end %>
<% end %>

<% @restaurant.reviews.each do |m| %>
  <p>
    <%= m %><br> 
    <i> Rating</i> <%= m.rating %><br>
    <%= m.comment %> <br>
  </p>
<% end %>