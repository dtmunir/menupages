<%= form_for(@menu_item) do |x| %>
  <div>
    <%= x.label :menu %>
    <%= x.collection_select(:menu_id, @menus, :id, :to_s) %>
  </div>
  <div>
    <%= x.label :name%>
    <%= x.text_field :name%>
  </div>
   <div>
      <%= x.label :price%>
      <%= x.text_field :price%>
  </div>

  <%= x.label :image %>
  <div class = "button">
    <button>Browse</button>
    <%= x.label :image %>
    <%= x.file_field :image, :class => "browse-field"%> 
</div>


  <div>
    <%= x.submit %>
  </div>
  <% end %>